{
  "name": "astro-blog",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "format": "prettier --write \"src/**/*.{js,ts,astro,css,scss,md,json}\" \"*.{js,ts,json,md}\"",
    "format:staged": "prettier --write",
    "lint": "eslint src/ --ext .js,.ts,.astro",
    "lint:fix": "eslint src/ --ext .js,.ts,.astro --fix",
    "lint:staged": "eslint --fix",
    "type-check": "astro check",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.0.0",
    "@astrojs/prefetch": "^0.4.1",
    "@astrojs/rss": "^4.0.4",
    "@astrojs/sitemap": "^3.0.5",
    "@astrojs/tailwind": "^5.1.0",
    "@astrojs/ts-plugin": "^1.4.0",
    "@tailwindcss/typography": "^0.5.10",
    "astro": "^5.10.1",
    "date-fns": "^3.3.1",
    "reading-time": "^1.5.0",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^0.31.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "prettier-plugin-astro": "^0.12.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,json}": [
      "prettier --write"
    ],
    "*.{png,jpg,jpeg,gif,svg}": [
      "imagemin-lint-staged"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run build"
    }
  }
}
